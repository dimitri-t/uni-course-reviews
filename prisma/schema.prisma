// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Courses {
  id         Int      @id @default(autoincrement())
  courseName String
  reviews    Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  author    String
  text      String
  Courses   Courses? @relation(fields: [coursesId], references: [id])
  coursesId Int?
}
